[user]
  name = Adam Malcontenti-Wilson
  email = amalcontenti-wilson@zendesk.com

[core]
	excludesfile = ~/.gitignore
	editor = vim

[include]
  path = ~/.gitaliases

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[color "status"]
  changed = yellow
  added = green
  untracked = red

[push]
	default = simple

[credential]
	helper = osxkeychain

[hub]
  protocol = https
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
