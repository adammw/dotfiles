AllCops:
  TargetRubyVersion: 2.3
  # Include gemspec and Rakefile
  Include:
    - '**/*.gemspec'
    - '**/Rakefile'
  Exclude:
    - 'vendor/**'

ClassLength:
  Enabled: false

Documentation:
  Enabled: false

MethodLength:
  Enabled: false

SpaceInsideBrackets:
  Enabled: false

LineLength:
  Max: 120

CommentAnnotation:
  Keywords:
    - TODO
    - FIXME
    - OPTIMIZE
    - HACK
    - REVIEW
